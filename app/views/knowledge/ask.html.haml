= render 'search_form'


.container.d-flex.align-items-center
  .row
    = turbo_frame_tag("top_articles", class: "col-md-6 col-sm-12", busy: true) do
      .card.mask.box
        .card-body
          %h4 Top 5 articles

          %ol
            - @results.each do |r|
              - article = Article.find(r['article_id'])
              %li= link_to article.title, article.url
              /= "(#{r[:similarity]}%)"
              /%small= link_to "(use this)", knowledge_ask_path(question: @question.question, article_id: r[:article_id])

    = turbo_frame_tag("geeko_answer", class: "col-md-6 col-sm-12") do
      .card.mask.box
        .card-body
          %h4 What does the Geeko say?
          %i.bi.bi-quote
          = auto_link(@answer)
          %i.bi.bi-quote
