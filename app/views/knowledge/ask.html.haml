= render 'search_form'

<br/>

<h4>Top 5 articles:</h4>

- @results.each do |r|
  - article = Article.find(r[:article_id])
  = link_to article.title, article.url
  = "(#{r[:similarity]}%)"
  %small= link_to "(use this)", knowledge_ask_path(question: @question.question, article_id: r[:article_id])
  <br/>


<br/>
<h4>Smart answer:</h4>

= @answer

<br/><br/>
%small= "based on '#{@article.title}' (#{@article.url})" if @answer != "I'm sorry Dave, I don't know."
